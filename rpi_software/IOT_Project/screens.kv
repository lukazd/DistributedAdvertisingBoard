#:kivy 1.10.0
#:import Factory kivy.factory.Factory

<ScreenOne>:
    GridLayout:
        orientation: 'vertical'
        size: root.size
        rows: 4

        BoxLayout:
            size_hint: 1,0.1
            cols: 2

            Label:
                id: timer_label
                background_normal: ''
                background_color: 0, 0, 0, 1
                text: ''
                font_weight: 'Bold'
                font_size: 30
                color: 0, 0.8, 0, 1
                size_hint_x: 0.2

            Label:
                id: dab_label
                text: 'SenseAd'
                font_size: 40
                font_weight: 'Bold'
                background_normal: ''
                background_color: 0, 0, 0, 1
                size_hint_x: 0.6

            Image:
                id: user_image
                source: "background.jpg"
                texture: 
                pos: self.pos
                center: self.parent.center
                background_normal: ''
                background_color: 0,0,0,1
                allow_stretch: True
                keep_ratio: True
                size_hint_x: 0.2

        BoxLayout:
            size_hint: 1,0.7
            cols: 1

            AsyncImage:
                id: center_image
                pos: self.pos
                center: self.parent.center
                size: self.texture_size
                allow_stretch: True
                keep_ratio: True
                background_normal: ''
                background_color: 0,0,0,1
                source: 'background.jpg'

        BoxLayout:
            size_hint: 1, 0.1
            cols: 3

            Button:
                id: like_button
                size_hint_x: 1.0/3.0
                font_weight: "Bold"
                font_size: 40
                background_normal: ''
                background_color: 0, 0, 0, 1
                padding_x: 10

            Button:
                id: neutral_button
                size_hint_x: 1.0/3.0
                font_weight: "Bold"
                font_size: 40
                background_normal: ''
                background_color: 0, 0, 0, 1
                padding_x: 10

            Button:
                id: dislike_button
                size_hint_x: 1.0/3.0
                font_weight: "Bold"
                font_size: 40
                background_normal: ''
                background_color: 0, 0, 0, 1
                padding_x: 10

        BoxLayout:
            size_hint: 1,0.1
            cols: 3

            Label:
                id: user_label
                size_hint_x: 0.6
                background_normal: ''
                background_color: 0, 0, 0, 1
                text: "Finding user..."
                font_weight: "Bold"
                font_size: 40
                text_size: self.size
                valign: "middle"
                padding_x: 10
                color: 1, 0, 0, 1

            Button:
                id: quit_button
                background_normal: ''
                background_color: 0.8, 0, 0, 1
                text: ""
                font_weight: 'Bold'
                font_size: 40
                size_hint_x: 0.2
                
            Button:
                id: help_button
                text: 'Help-Me'
                font_weight: "Bold"
                font_size: 40
                size_hint_x: 0.2
                background_normal: ''
                background_color: 0, 0.75, 1, 1
                color: 1, 1, 1, 1

<Manager>:
    id: screen_manager

    screen_one: screen_one

    ScreenOne:
        id: screen_one
        name: "screen1"
        manager: screen_manager
